{
  "manifest_version": 3,
  "name": "LeetCode AI Interviewer",
  "version": "1.0",
  "description": "AI Interviewer for Leetcode",
  "permissions": ["storage", "scripting", "activeTab", "sidePanel"],
  "host_permissions": ["https://leetcode.com/*", "https://api.groq.com/openai/*"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "LeetCode AI Interviewer",
    "default_icon": "icon.png"
  }
}
